<tr class="border-b border-neutral-200">
  <td class="px-4 py-1"><%= bicycle_parking.name %></td>
  <td class="px-4 py-1"><%= bicycle_parking.location %></td>
  <td class="px-4 py-1"><%= bicycle_parking.opening_hours %></td>
  <td class="px-4 py-1"><span class="<%= status_style(bicycle_parking) %>"><%= status_text(bicycle_parking) %></span></td>
  <td class="px-4 py-1">
    <div class="flex gap-2">
      <div data-controller="popover">
        <%= link_to admin_bicycle_parking_path(bicycle_parking), data: { action: "mouseenter->popover#show mouseleave->popover#hide" }, class: "text-blue-500 hover:text-blue-700 relative" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
          <template data-popover-target="content">
            <div data-popover-target="card">
              <p class="absolute top-[-22px] left-[-6px] bg-white rounded text-xs w-[40px] py-1 text-center shadow">詳細</p>
            </div>
          </template>
        <% end %>
      </div>
      <div data-controller="popover">
        <%= link_to edit_admin_bicycle_parking_path(bicycle_parking), data: { action: "mouseenter->popover#show mouseleave->popover#hide" }, class: "text-red-500 hover:text-red-700 relative" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
          <template data-popover-target="content">
            <div data-popover-target="card">
              <p class="absolute top-[-22px] left-[-6px] bg-white rounded text-xs w-[40px] py-1 text-center shadow">編集</p>
            </div>
          </template>
        <% end %>
      </div>
    </div>
  </td>
</tr>
