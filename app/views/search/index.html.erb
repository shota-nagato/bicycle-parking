
<h2 class="font-bold text-xl text-center mt-12 mb-4">絞り込み検索</h2>

<div class="flex justify-center px-4">
  <%= form_with url: root_path, method: :get, local: true do |form| %>
    <div class="flex gap-2 text-lg text-gray-600 mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
      </svg>
      車種
    </div>
    <div class="flex flex-wrap gap-4 mb-12">
      <div>
        <%= form.check_box :motorized_bicycle_under_50cc_parkable, id: "motorized_bicycle_under_50cc_parkable_option", class: "hidden peer", checked: @search_params["motorized_bicycle_under_50cc_parkable"]==="1" %>
        <label for="motorized_bicycle_under_50cc_parkable_option" class="inline-flex items-center justify-between p-4 text-gray-500 bg-white border-2 border-gray-200 rounded-full cursor-pointer peer-checked:border-blue-600 hover:text-gray-600 peer-checked:text-blue-600 hover:bg-gray-50">
          原付50cc以下
        </label>
      </div>
      <div>
        <%= form.check_box :motorized_bicycle_under_125cc_parkable, id: "motorized_bicycle_under_125cc_parkable_option", class: "hidden peer", checked: @search_params["motorized_bicycle_under_125cc_parkable"]==="1" %>
        <label for="motorized_bicycle_under_125cc_parkable_option" class="inline-flex items-center justify-between p-4 text-gray-500 bg-white border-2 border-gray-200 rounded-full cursor-pointer peer-checked:border-blue-600 hover:text-gray-600 peer-checked:text-blue-600 hover:bg-gray-50">
          原付125cc以下
          </label>
      </div>
      <div>
        <%= form.check_box :motorcycle_parkable, id: "motorcycle_parkable_option", class: "hidden peer", checked: @search_params["motorcycle_parkable"]==="1" %>
        <label for="motorcycle_parkable_option" class="inline-flex items-center justify-between p-4 text-gray-500 bg-white border-2 border-gray-200 rounded-full cursor-pointer peer-checked:border-blue-600 hover:text-gray-600 peer-checked:text-blue-600 hover:bg-gray-50">
          自動二輪
        </label>
      </div>
    </div>
    <div class="text-right">
      <%= form.submit '絞り込み', class: " text-right bg-blue-500 hover:bg-blue-700 text-white text-xl font-bold px-6 py-2 rounded-full cursor-pointer" %>
    </div>
  <% end %>
</div>
